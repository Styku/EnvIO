<form class="form-horizontal">
    <div class="row-fluid">
        <div class="span3"><h4>Name</h4></div>
        <div class="span2"><h4>Type</h4></div>
        <div class="span2"><h4>GPIO</h4></div>
        <div class="span4"><h4>Path</h4></div>
    </div>
    <div class="control-group" data-bind="foreach: sensor_settings">
        <div class="row-fluid" style="margin-bottom: 5px">
            <div class="span3">
                <input type="text" class="span12" data-bind="value: name">
            </div>
            <div class="span2">
                <select data-bind="options: $root.devTypes,
                                   optionsText: 'name',
                                   optionsValue: 'id',
                                   value: type" class="span12"></select>
            </div>
            <div class="span2">
                <input type="number" step="any" min="2" max="27" class="input-mini text-right" data-bind="value: gpio">
            </div>
            <div class="span4">
                <input type="text" class="span12" data-bind="value: path,
                                                             enable: type() == 1">
            </div>
            <div class="span1">
                <button type="button" class="btn btn-danger" data-bind="click: $parent.removeDevice">x</button>
            </div>
        </div>
    </div>
</form>

<button type="button" class="btn btn-success" data-bind="click: addDevice">+</button>

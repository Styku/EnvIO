<form class="form-horizontal">
    <h3>General settings</h3>
    <div class="control-group" title="How often to query sensors for new data.">
        <label class="control-label">Sensor refresh rate</label>
        <div class="controls">
            <div class="input-append">
                <input class="input-mini text-right" data-bind="value: sensor_refresh_rate" type="number">
                <span class="add-on">s</span>
            </div>
        </div>
    </div>
    
    
    <h3>Sensors <button type="button" class="btn btn-success" data-bind="click: addSensor">+</button></h3>
    <div class="row-fluid">
        <div class="span3"><h4>Name</h4></div>
        <div class="span2"><h4>Type</h4></div>
        <div class="span2"><h4>GPIO</h4></div>
        <div class="span4"><h4>Path</h4></div>
    </div>
    <div class="control-group" data-bind="foreach: sensor_settings">
        <div class="row-fluid" style="margin-bottom: 5px">
            <div class="span3">
                <input type="text" class="span12" data-bind="value: name">
            </div>
            <div class="span2">
                <select data-bind="options: $root.sensorTypes,
                                   optionsText: 'name',
                                   optionsValue: 'id',
                                   value: type" class="span12"></select>
            </div>
            <div class="span2">
                <input type="number" step="any" min="2" max="27" class="input-mini text-right span12" data-bind="value: gpio">
            </div>
            <div class="span4">
                <input type="text" class="span12" data-bind="value: path,
                                                             enable: type() == 1">
            </div>
            <div class="span1">
                <button type="button" class="btn btn-danger" data-bind="click: $parent.removeSensor">x</button>
            </div>
        </div>
        <div class="row-fluid" style="margin-bottom: 5px">
            <div class="span4">
                <label class="checkbox">
                    <input data-bind="checked: visible" type="checkbox"> Visible in navbar 
                </label>                                    
            </div>
            <div class="span2 text-right">
                Unit:
            </div>
            <div class="span3">
                <input type="text" class="span12" data-bind="value: unit">
            </div>
                            
        </div>
    </div>

    <h3>Devices <button type="button" class="btn btn-success" data-bind="click: addDevice">+</button></h3>
    <div class="row-fluid">
        <div class="span3"><h4>Name</h4></div>
        <div class="span2"><h4>Type</h4></div>
        <div class="span2"><h4>GPIO</h4></div>
        <div class="span2"><h4>Output</h4></div>
        <div class="span2"><h4>Time</h4></div>
    </div>
    <div class="control-group" data-bind="foreach: device_settings">
        <div class="row-fluid" style="margin-bottom: 5px">
            <div class="span3">
                <input type="text" class="span12" data-bind="value: name">
            </div>
            <div class="span2">
                <select data-bind="options: $root.devTypes,
                                   optionsText: 'name',
                                   optionsValue: 'id',
                                   value: type" class="span12"></select>
            </div>
            <div class="span2">
                <input type="number" step="any" min="2" max="27" class="input-mini text-right" data-bind="value: gpio">
            </div>
            <div class="span2">
                <input type="text" class="span12" data-bind="value: output">
            </div>
            <div class="span2">
                <input type="text" class="span12" data-bind="value: time">
            </div>
            <div class="span1">
                <button type="button" class="btn btn-danger" data-bind="click: $parent.removeDevice">x</button>
            </div>
        </div>
        <div class="row-fluid" style="margin-bottom: 5px">
                            
        </div>
    </div>
</form>

